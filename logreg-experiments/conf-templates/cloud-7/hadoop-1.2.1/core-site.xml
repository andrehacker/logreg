<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- Put site-specific property overrides in this file. -->

<configuration>
  <!-- Defines the port of the namenode client protocol (IPC) -->
  <property>
    <name>fs.default.name</name>
    <value>hdfs://cloud-7:45010/</value>
  </property>

  <property>
    <name>hadoop.tmp.dir</name>
    <value>/data/hadoop_experiments/tmp</value>
    <!--<value>/data/hdfs-0.20_varscale/tmp</value>-->
  </property>

  <property>
    <name>io.file.buffer.size</name>
    <value>524288</value>
  </property>

</configuration>
